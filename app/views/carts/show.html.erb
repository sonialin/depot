<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>
 
<div>Your Cart</div>
<table>
	<% @cart.line_items.each do |item| %>
	<tr>
		
		<td><%= item.quantity %></td>  
		<td class="item_price"><%= number_to_currency(item.total_price) %></td>
  </tr>
  <% end %>
</table>

<tr>
	<td>Total</td>  
	<td><%= number_to_currency(@cart.total_price) %></td>
</tr>


<%= button_to 'Empty cart', @cart, :type => "button", :class => "btn btn-ttc", :method => :delete, :confirm => 'Are you sure?' %>
